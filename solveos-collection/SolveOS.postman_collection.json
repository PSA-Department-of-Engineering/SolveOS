    {
      "name": "Authentication",
      "item": [
        {
          "name": "POST /api/v1/auth/login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "{{username}}",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "{{password}}",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            },
            "description": "OAuth2-compatible login. On success, server sets HttpOnly cookie (e.g., `solveos_token`) and returns a JSON body with `access_token`."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Save access_token (if present)",
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "try {",
                  "  var json = pm.response.json();",
                  "  if (json && json.access_token) {",
                  "    pm.environment.set('access_token', json.access_token);",
                  "  }",
                  "} catch (e) { /* non-JSON or missing token */ }",
                  "",
                  "// Save HttpOnly cookie value to env var as a convenience (Postman cookie jar will also store it automatically).",
                  "var c = pm.cookies.get('solveos_token');",
                  "if (c) {",
                  "  pm.environment.set('solveos_token', c);",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "GET /api/v1/auth/me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "me"
              ]
            },
            "description": "Get current user information. Uses cookie auth (HttpOnly) and/or Bearer token if supported."
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// If you prefer cookie header explicitly (in addition to Postman's cookie jar), uncomment the next lines:",
                  "// if (pm.environment.get('solveos_token')) {",
                  "//   pm.request.headers.add({key: 'Cookie', value: 'solveos_token=' + pm.environment.get('solveos_token')});",
                  "// }"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 or 401', function () {",
                  "  pm.expect([200,401]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ],
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "username",
      "value": "admin@solveos.com"
    },
    {
      "key": "password",
      "value": "changeme"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "solveos_token",
      "value": ""
    }
  ]
}