# EditorConfig for consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 4

[*.{html,css}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
